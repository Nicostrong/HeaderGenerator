NAME = LongCapChar

NAME_DEBUG = prog_debug

SRC = LongCapChar.c

LIB = -L../lib -lmin -lmaj -lch -lfx

FLAGW = -W -Wall -Werror

all:
	@clear
	@echo "Compilation :"
	gcc -o $(NAME) $(SRC) $(FLAGW) $(LIB)

debug:
	@clear
	@echo "Compilation en mode debug"
	gcc -g -o $(NAME_DEBUG) $(SRC) $(FLAGW) $(LIB)
	gdb $(NAME_DEBUG)

clean:
	/bin/rm -f *.o
	/bin/rm -f *.*~
	
fclean: clean
	/bin/rm -f $(NAME)

re: fclean all

